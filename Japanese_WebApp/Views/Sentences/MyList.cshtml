@model IEnumerable<Japanese_WebApp.Models.Entities.UserFavourite>

@{
    ViewBag.Heading = "私のリスト";
    ViewBag.SubHeading = "My List";
}

<section>
    <div class="container">
        <div class="row align-items-center">

            <div class="col-md-12 mt-3">
                <a href="@Url.Action("CreateAnki", "Sentences")">
                    <img src="~/Files/Anki-icon.png" width="32" height="32" />
                    <span>Create Anki Deck</span>
                </a>

                @if (TempData["SM"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SM"]
                    </div>
                }
            </div>

            </div>
            <div class="row align-items-center">
                <div class="col-md-12">

                    <table class="table table-bordered m-4">
                        <thead class="table-success">
                            <tr>
                                <th>English　英語</th>
                                <th>Japanese　日本語</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="@item.Id">
                                    <td class="eng">@item.Eng</td>
                                    <td class="jap">
                                        @item.Jap

                                        <span class="pull-right">
                                            <a href="@item.Audio_Jap" target="_blank" class="mr-2">
                                                <i class="fa fa-download action-download"></i>
                                            </a>
                                            <i class="fa fa-volume-up action-vol mr-2"
                                               data-audio="@item.Audio_Jap"></i>

                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                if (item.InMyList)
                                                {
                                                    <i class="fa fa-heart heart mr-2"
                                                       data-eng="@item.Eng"
                                                       data-jap="@item.Jap"
                                                       data-audio="@item.Audio_Jap"
                                                       data-inlist="@item.InMyList"
                                                       data-source="@item.Source"></i>
                                                }
                                                else
                                                {
                                                    <i class="fa fa-heart-o heart mr-2"
                                                       data-eng="@item.Eng"
                                                       data-jap="@item.Jap"
                                                       data-audio="@item.Audio_Jap"
                                                       data-inlist="@item.InMyList"
                                                       data-source="@item.Source"></i>
                                                }

                                            }

                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (Model.Count() == 0 && !string.IsNullOrEmpty(ViewBag.SearchValue))
                    {
                        <h6 class="m5 text-center">There are no sentences that match: @ViewBag.SearchValue</h6>
                    }

                </div>
            </div>
        </div>
</section>
