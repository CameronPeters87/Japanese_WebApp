@model IEnumerable<Japanese_WebApp.Models.Sentence>

@{
    ViewBag.Title = "Index";
}

<p id="lang" class="d-none">@ViewBag.SearchLang</p>

<section>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-12">

                <table class="table table-bordered table-responsive m-4">
                    <thead class="table-success">
                        <tr>
                            <th>English　英語</th>
                            <th>Japanese　日本語</th>
                            @*<th>Action</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="eng">@item.eng</td>
                                <td class="jap">
                                    @item.jap

                                    <span class="pull-right">
                                        <a href="@item.audio_jap" target="_blank" class="mr-2">
                                            <i class="fa fa-download action-download"></i>
                                        </a>
                                        <i class="fa fa-volume-up action-vol mr-2"
                                           data-audio="@item.audio_jap"></i>

                                        <i class="fa fa-heart-o heart mr-2"></i>

                                        @*<a href="@Url.Action("CreateAnki", "Sentences", new { eng = item.eng, jap = item.jap, search = ViewBag.SearchValue })">
                                            <img src="~/Files/Anki-icon.png" width="24" height="24" />
                                        </a>*@
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (Model.Count() == 0 && !string.IsNullOrEmpty(ViewBag.SearchValue))
                {
                    <h6 class="m5 text-center">There are no sentences that match: @ViewBag.SearchValue</h6>
                }

            </div>
        </div>
    </div>
</section>
